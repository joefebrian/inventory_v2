<% title "Delivery Order #{@delivery.number}" %>

<div id='subheader'>
  <h3><%=h "Delivery Order # #{@delivery.number}" %></h3>
  <div id='subheader-menu'>
    <%= link_to "#{image_tag('icons/silk/arrow_left.png')} back", project_spk_deliveries_path(@spk) %> &bull;
    <%= link_to "#{image_tag('icons/silk/application_form_edit.png')} edit", edit_project_spk_delivery_path(@spk, @delivery), :title => "Edit Delivery Order #{@delivery.number}" %>
  </div>
</div>

<% content_for :breadcrumb do %>
  <%= breadcrumb [ link_to("Projects", project_spks_path),
    @delivery.number ] %>
<% end -%>

<%= sidemenu %>
<%= hint "Click 'edit' to edit this delivery order" %>

<table class="list">
  <thead>
    <tr>
      <th>No.</th>
      <th>Item</th>
      <th>Quantity</th>
    </tr>
  </thead>

  <% @delivery.entries.each_with_index do |entry, i| %>
    <tbody>
      <tr>
        <td><%= i+1 %></td>
        <td><%= entry.item.name %></td>
        <td class="numbers"><%= entry.quantity %></td>
      </tr>
    </tbody>
  <% end %>
</table>
