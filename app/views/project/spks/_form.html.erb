<% semantic_form_for(@spk) do |f| %>
  <%= f.error_messages %>
  <% f.inputs "SPK", :class => "form_section" do %>
    <%= f.input :name %>
    <%= f.input :customer_name, :input_html => { :class => "customer_autocomplete" }, :required => true %>
    <%= f.input :salesman, :include_blank => false, :collection => current_company.salesmen.collect { |s| ["#{s.fullname.strip} (#{s.profile.address})", s.id]} %>
    <%= f.input :term_of_payment, :input_html => { :rows => 2 } %>
    <li class="string required">
      <%= f.label :active_from, "Valid", :class => "required" %>
      <div class="inline">
        <%= f.text_field :valid_from, :size => 20, :class => "datepicker" %><br/>
        <p class="inline-hints inline-labels">From</p>
      </div>
      <div class="inline">
        <%= f.text_field :valid_thru, :size => 20, :class => "datepicker" %><br/>
        <p class="inline-hints inline-labels">Until</p>
      </div>
    </li>
    <li class="string required">
      <%= f.label :discount, "Discount / Rounding", :class => "" %>
      <div class="inline">
        <%= f.text_field :discount, :size => 20, :class => "" %><br/>
        <p class="inline-hints inline-labels">Discount (%)</p>
      </div>
      <div class="inline">
        <%= f.text_field :rounding, :size => 20, :class => "" %><br/>
        <p class="inline-hints inline-labels">Rounding</p>
      </div>
    </li>
  <% end %>
  <fieldset class="buttons">
    <button type="submit" id='primary-button'>
      <%= image_tag 'icons/silk/disk.png' %>
      Save Project
    </button>
  </fieldset>
<% end %>
