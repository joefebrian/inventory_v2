<% title "Project Material Request" %>

<% content_for :breadcrumb do %>
  <%= breadcrumb [ link_to("Projects", project_spks_path) ] %>
  <div id="top_right_link">
    <% form_for @search do |f| %>
      <%= f.text_field :requester_or_number_like %>
      <%= f.submit 'search' %>
    <% end %>
  </div>
<% end -%>

<div id='subheader'>
  <h3>Project Material Request</h3>
  <div id='subheader-menu'>
    <%= link_to "#{image_tag('icons/silk/add.png')} Create new material request", new_project_spk_request_path, :class => "main_link ", :title => "Create New Request" %>
  </div>
</div>
<%= hint "" %>

<table class="list">
  <thead>
    <tr>
      <th>Number</th>
      <th>Requester</th>
      <th>Due Date</th>
      <th>Allocation</th>
      <th class="actions">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |req| %>
      <tr>
        <td><%=link_to h(req.number), project_spk_request_path(@spk, req) %></td>
        <td><%=h req.requester %></td>
        <td><%=h req.due_date.to_s(:long) %></td>
        <td><%= link_to "Material Allocation", allocations_project_spk_request_path(@spk, req) %>
        <td class="actions">
          <%= link_to image_tag('icons/silk/application_form_edit.png'), edit_project_spk_request_path(@spk, req), :title => 'edit this material request' %>
          <%= link_to image_tag('icons/silk/cross.png'), project_spk_request_path(@spk, req), :confirm => 'Are you sure?', :method => :delete, :title => 'delete this material request' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
